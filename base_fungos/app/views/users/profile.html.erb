<h2>My Profile</h2>

<p>
	Use the form below to view or modify your profile information.<br/>
</p>
<br/>


<!-- Tratamento de erros -->
<% if @user.errors.any? %>

<table class="generic" width="100%">
	<tr>
		<td class="error_messages" colspan="2">
			<p>Please, note that:</p>
			<ul>
				<% @user.errors.each_with_index do |msg, i| %>
				<li><%= msg[1] %></li>
				<% end %>
			</ul>
			<!-- Erros completos (comentados) -->
			<!--
				<% @user.errors.full_messages.each do |m| %>
				<%= m %>
				<% end %> 
			-->
		</td>
	</tr>
</table>
<br/>
<br/>

<% end %>

<p><b>User details:</b><br></p>

<%= form_for @user, url: { :action => "profile_edit" } do |f| %>

<!-- Campos do formulario -->
<table class="generic" width="100%">
	
	
	<tr>
		<td class="label" width="200px">Role</td>
		<td class="field"><%= "#{@user.user_role.nivel} (#{@user.user_role.descricao})" %></td>
	</tr>
	
	<tr>
		<td class="label">E-mail</td>
		<td class="field"><%= @user.email %></td>
	</tr>
	
	<tr>
		<td class="label">Display Name</td>
		<td class="field"><%= f.text_field :nomeExibicao %></td>
		</tr>
	
</table>

<br/>
<%= f.submit "Update Info" %>

<% end %>

<br/><br/>

<p><b>Account security:</b><br></p>

<%= form_for @user, url: { :action => "password_edit" } do |p| %>

<table class="generic" width="100%">
	
	<tr>
		<td class="label" width="200px">Current Password</td>
		<td class="field"><%= p.password_field :senha_ant %></td>
	</tr>
	
	<tr>
		<td class="label">New Password *</td>
		<td class="field"><%= p.password_field :senha %></td>
	</tr>
	
	<tr>
		<td class="label">Repeat New Password</td>
		<td class="field"><%= p.password_field :senha_confirmation %></td>
	</tr>
	
	<tr>
		<td class="label" colspan="2">
			<i>
				* The password must be at least 4 characters and/or numbers in length
			</i>
		</td>
	</tr>
	
</table>

<br/>
<%= p.submit "Change Password" %>

<% end %>

<br/><br/>
<button class="button" onclick="back()">Back</button>
<br/><br/> 
