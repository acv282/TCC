<h2>Sign up as a coordinator</h2>

<%= form_for @user, url: { :action => "create_coord" } do |f| %>

<div>
	
	<!-- Campos do formulario -->
	<table id="coord_signup" class="center">
		
		<!-- Tratamento de erros -->
		<% if @user.errors.any? %>
		
		<tr>
			<td class="error_messages" colspan="2">
				<p>Please, note that:</p>
				<ul>
					<% @user.errors.each_with_index do |msg, i| %>
					<li><%= msg[1] %></li>
					<% end %>
				</ul>
				<!-- Erros completos (comentados) -->
				<!--
					<% @user.errors.full_messages.each do |m| %>
					<%= m %>
					<% end %> 
				-->
			</td>
		</tr>
		<tr>
			<td colspan="2"><hr><br/></td>
		</tr>
		
		<% end %>
		
		<tr>
			<td class="label">Display Name</td>
			<td class="field"><%= f.text_field :nomeExibicao %></td>
		</tr>
		
		<tr>
			<td class="label"><%= f.label "E-mail" %></td>
			<td class="field"><%= f.text_field :email %></td>
		</tr>
		
		<tr>
			<td class="label"><%= f.label "Password" %></td>
			<td class="field"><%= f.password_field :senha %></td>
		</tr>
		
		<tr>
			<td class="label"><%= f.label "Password Confirmation" %></td>
			<td class="field"><%= f.password_field :senha_confirmation %></td>
		</tr>
		
		<tr>
			<td class="label" colspan="2"><%= f.label "Reasons why you want to be a coordinator" %></td>
			<tr>
			</tr>
			<td class="field" colspan="2"><%= f.text_area :motivo %></td>
		</tr>
		
		<tr>
			<td class="submit" colspan="2"><%= f.submit %></td>
		</tr>
		
	</table>
	
</div>

<% end %>

<br/><br/>
<button class="button" onclick="back()">Back</button>
<br/><br/> 
