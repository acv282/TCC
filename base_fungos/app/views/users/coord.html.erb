<h2>Coordinator Administration Page</h2>

<!-- Painel de ações do coordenador -->
<table id="coord_pane" cellspacing="10px">
	
	<!-- Primeira linha -->
	<tr>
		
		<!-- Meus projetos -->
		<td class="bloco_acao">
			
			<div class="titulo">
				<h3>My Projects</h3>
			</div>
			
			<div class="conteudo">
				<% if @projects && @projects.count > 0 %>
				<table id="table_coord_projects">
					<tr class="titulo">
						<td><b>Project Name</b></td>
						<td><b>Edit Project</b></td>
					</tr>
					<% @projects.each do |prj| %>
					<tr class="conteudo">
						<td><%= prj.nome %></td>
						<td><%= button_to "Edit", prj_edit_path(:id => prj.id), :method => :get, :class => "button" %></td>
					</tr>
					<%end%>
				</table>
				<%else%>
				<h4>You currently have no projects!</h4>
				<%end%>
				
				<br/>
				<%= button_to "Submit a New Project", prj_new_path, :method => :get, :class => "button" %>
				<br/>
			</div>
			
		</td>
		
		<!-- Meus pesquisadores -->
		<td class="bloco_acao">
			
			<div class="titulo">
				<h3>My Researchers</h3>
			</div>
			
			<div class="conteudo">
				<% if @equipesCoord && @equipesCoord.count > 0 %>
				<table id="table_coord_researchers">
					<tr class="titulo">
						<td><b>Researcher</b></td>
						<td><b>At Project...</b></td>
						<td><b>Status</b></td>
						<td><b>Edit</b></td>
					</tr>
					<% @equipesCoord.each do |usCoord| %>
					<tr class="conteudo">
						<td><%= usCoord.user.nomeExibicao %></td>
						<td>
							<% if !usCoord.project %>
							(No project)
							<%else%>
							<%= usCoord.project.nome %>
							<%end%>
						</td>
						<td>
							<% if !usCoord.status_ace %>
							<span class="red">(Removed)</span>
							<%else%>
							Assigned
							<%end%>
						</td>
						<td><%= button_to "Edit", team_edit_c_path(:id => usCoord.id), :method => :get, :class => "button" %></td>
						
					</tr>
					<%end%>
				</table>
				<% else %>
				<h4>You currently have no researchers!</h4>
				<%end%>
			</div>
			
			<br/>
			
		</td>
		
	</tr>
	
	<!-- Segunda linha -->
	<tr>
		
		<!-- Meus arquivos -->
		<td class="bloco_acao">
			
			<div class="titulo">
				<h3>My Files</h3>
			</div>
			
			<div class="conteudo">
				<% if @projects && @projects.count > 0 %>
				<table id="table_coord_files">
					
					<% @projects.each do |p| %>
					<tr>
						<td><b>Project <%= p.nome %> - Organisms:</b></td>
						<td></td>
					</tr>
					
					<% if p.organisms.count > 0 %> 
					<% p.organisms.each do |o| %>
					<tr>
						<td><%= o.nome %></td>
						<td><%= button_to "Edit", edit_org_path(:id => o.id), :method => :get, :class => "button" %></td>
					</tr>
					<%end%>
					<%else%>
					<tr>
						<td>There is no organisms in this project</td>
						<td></td>
					</tr>
					<%end%>
					
					<tr>
						<td><%= button_to "Create new organism", new_org_path(:id => p.id), :method => :get, :class => "button" %></td>
						<td></td>
					</tr>
					
					<tr>
						<td><br/></td>
						<td></td>
					</tr>
					
					<%end%>
				</table>
				<%else%>
				<h4>No files submitted yet</h4>
				<%end%>
			</div>
			
			<br/>
		</td>
		
		<!-- Novos pesquisadores -->
		<td class="bloco_acao">
			
			<div class="titulo">
				<h3>New Researchers</h3>
			</div>
			
			<div class="conteudo">
				<% if @teamNovos && @teamNovos.count > 0 %>
				<table id="table_coord_new_researchers">
					<% @teamNovos.each do |t| %>
					<tr>
						<td><%= t.user.nomeExibicao %> <i>at Project:</i> <%= t.project.nome %></td>
						<td><%= button_to "Edit", team_edit_a_path(:id => t.id), :method => :get, :class => "button" %></td>
					</tr>
					<%end%>
				</table>
				<%else%>
				<h4>No new users to review</h4>
				<%end%>
			</div>
			
			<br/>
			
		</td>
		
	</tr>
	
	<!-- Terceira linha -->
	<tr>
		
		<!-- Minhas equipes -->
		<td class="bloco_acao">
			
			<div class="titulo">
				<h3>My Teams | All</h3>
			</div>
			
			<div class="conteudo">
				<% if @myTeams && @myTeams.count > 0 %>
				<table id="table_coord_teams">
					<% @myTeams.each do |m| %>
					<tr>
						<td>[<%= m.team_role.nivel %>] - <%= m.user.nomeExibicao %> <i>at Project:</i> <%= m.project.nome %></td>
						<td><%= button_to "Edit", team_edit_c_path(:id => m.id), :method => :get, :class => "button" %></td>
					</tr>
					<%end%>
				</table>
				<%else%>
				<h4>You have no teams</h4>
				<%end%>
			</div>
			
			<br/>
		</td>
		
		
		<!-- Novos convidados -->
		<td class="bloco_acao">
			
			<div class="titulo">
				<h3>New Guests</h3>
			</div>
			
			<div class="conteudo">
				<% if @newGuests && @newGuests.count > 0 %>
				<table id="table_coord_guests">
					<% @newGuests.each do |n| %>
					<tr>
						<td><%= n.user.nomeExibicao %> <i>at Project:</i> <%= n.project.nome %></td>
						<td><%= button_to "Edit", team_edit_a_path(:id => n.id), :method => :get, :class => "button" %></td>
					</tr>
					<%end%>
				</table>
				<%else%>
				<h4>You have no new guests</h4>
				<%end%>
				
			</div>
			
			<br/>
		</td>
		
	</tr>
	
</table>
